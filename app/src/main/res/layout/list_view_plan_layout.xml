<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TableRow
        android:id="@+id/llTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/tvShowOrderId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单号"
            style="@style/textViewTitleStyle" />

        <TextView
            android:id="@+id/tvShowProductModel"
            style="@style/textViewTitleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="产品型号" />

        <TextView
            android:id="@+id/tvShowOrderNumber"
            style="@style/textViewTitleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单数量" />

        <TextView
            android:id="@+id/tvShowChargeMan"
            style="@style/textViewTitleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="负责人员" />

        <TextView
            android:id="@+id/tvShowStartDate"
            style="@style/textViewTitleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="生产日期" />

        <TextView
            android:id="@+id/tvShowFinishDate"
            style="@style/textViewTitleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="完成日期" />

        <TextView
            android:id="@+id/tvShowPlanId"
            style="@style/textViewTitleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID" />

        <TextView
            android:id="@+id/tvShowStatus"
            style="@style/textViewTitleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="状态" />
    </TableRow>


    <TableRow

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvOrderId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            style="@style/planTextViewStyle"
            />

        <TextView
            android:id="@+id/tvProductModel"
            style="@style/planTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2" />

        <TextView
            android:id="@+id/tvOrderNumber"
            style="@style/planTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3" />

        <TextView
            android:id="@+id/tvChargeMan"
            style="@style/planTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4" />

        <TextView
            android:id="@+id/tvStartDate"
            style="@style/planTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5" />

        <TextView
            android:id="@+id/tvFinishDate"
            style="@style/planTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6" />

        <TextView
            android:id="@+id/tvPlanId"
            style="@style/planTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7" />

        <TextView
            android:id="@+id/tvStatus"
            style="@style/planTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8" />
    </TableRow>

</TableLayout>